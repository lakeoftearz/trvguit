<% provide(:title, 'New Review') %>
<% provide(:button_text, 'submit') %>
<h1>New review for <%= @fcomp.name %></h1>

<p>Please write below your experience when travelling with a musical instrument 
	with <%= @fcomp.name %> airline </p>
	<p>Note that the review is not published automatically. It has to be checked by an admin 
		first and you would be contacted by email should there be any questions</p>
		
		<p>

	<a href="#about" data-toggle="modal">Here</a>
 you can read the guidelines for submitting a review</p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
   
 
    <%= simple_form_for ([@review.fcomp, @review])  do |f| %>
 <%= render 'shared/error_reviews' %>
      <%= f.label 'Title of the review (max 100 characters) - displayed in the review list' %>
      <%= f.text_field :title , class: 'form-control' %>
      
            <%= f.label 'Your Fullname - displayed as Submitted by' %>
      <%= f.text_field :fullname , class: 'form-control' %>
      
      <%= f.label 'Your country of origin' %>
      <%= f.country_select :country , :include_blank => true, class: 'form-control' %>
      
      <br>
         <%= f.label 'The band(s) you play in' %>
      <%= f.text_field :band , class: 'form-control' %>
      

      <%= f.label 'Email address' %>
      <%= f.text_field :email %>
      
  
      <%= f.label 'Review text - ' %>    
      <%= f.text_area :content  %>
      
      
      <br>
      <div class='off-form'>
      <%= hidden_field_tag :custom_field, 'false' %>
        <%= f.input :custom_field, :as => :boolean,  input_html: {checked: false} %>
        </div>
        
     <h3>Add ratings</h3>
      	<div class="form-group row">
  		<%= f.label 'Luggage handling', class: 'col-sm-4 form-control-label' %>  				
  		  	<div class="col-sm-6" id='star-rating1'></div>
  		</div>  	
  		<div class="form-group row">
  		<%= f.label 'Customer Service', class: 'col-sm-4 form-control-label' %>  				
  		  	<div class="col-sm-6" id='star-rating2'></div>
		</div>
		  		<div class="form-group row">
  		<%= f.label 'Friendliness', class: 'col-sm-4 form-control-label' %>  				
  		  	<div class="col-sm-6" id='star-rating3'></div>
		</div>
				  		<div class="form-group row">
  		<%= f.label 'Value for Money', class: 'col-sm-4 form-control-label' %>  				
  		  	<div class="col-sm-6" id='star-rating4'></div>
		</div>
     			  		<div class="form-group row">
  		<%= f.label 'Punctuality', class: 'col-sm-4 form-control-label' %>  				
  		  	<div class="col-sm-6" id='star-rating5'></div>
		</div>
     	

      <%= f.submit yield(:button_text), class: "btn btn-primary"  %>
<% end %>


   
     	
    
    
    <script type="text/javascript">
  $('#fcomp_logo').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 1) {
      alert('Maximum file size is 1MB. Please choose a smaller file.');
    }
  });
</script>

<script>
$('#star-rating1').raty({
    
    scoreName: 'review[rtg1]'
    
});

$('#star-rating2').raty({
    
    scoreName: 'review[rtg2]'
});
$('#star-rating3').raty({
    
    scoreName: 'review[rtg3]'
});
$('#star-rating4').raty({
    
    scoreName: 'review[rtg4]'
});
$('#star-rating5').raty({
    
    scoreName: 'review[rtg5]'
});



</script>

