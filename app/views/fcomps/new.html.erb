<% provide(:title, 'New Flight COmpany') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@fcomp, url: newfc_path) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :country %>
      <%= f.text_field :country %>

      <%= f.label :webpage %>
      <%= f.text_field :webpage %>

      <%= f.label :rules %>
      <%= f.text_area :rules %>
      
      <span class="picture">
    <%= f.file_field :logo, accept: 'image/jpeg,image/gif,image/png' %>
  </span>

      <%= f.submit "Create company", class: "btn btn-primary" %>
    <% end %>
    
    <script type="text/javascript">
  $('#fcomp_logo').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 1) {
      alert('Maximum file size is 1MB. Please choose a smaller file.');
    }
  });
</script>

  </div>
</div>