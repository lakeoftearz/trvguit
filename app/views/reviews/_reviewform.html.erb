<%= form_for ([@review.fcomp, @review])  do |f| %>
      <%= f.label 'Title of the review (max 100 characters) - displayed in the review list' %>
      <%= f.text_field :title %>
      
            <%= f.label 'Your Fullname - displayed as Submitted by' %>
      <%= f.text_field :fullname %>
      
      <%= f.label 'Your country of origin' %>
      <%= f.country_select :country %>
      
      
         <%= f.label 'The band(s) you play in' %>
      <%= f.text_field :band %>
      

      <%= f.label 'Email address' %>
      <%= f.text_field :email %>

      <%= f.label 'Review - please see guidelines before submitting' %>
      <%= f.text_area :content %>
           

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
